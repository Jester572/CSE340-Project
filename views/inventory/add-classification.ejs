<!-- Content Heading EJS -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>
<%- messages() %>
<form id="addClassificationForm" action="/inv/add-classification" method="post">
    <h2>Must be alphabetic characters!</h2>
    <label for="classification_name">Classification Name:</label><br>
    <input id="classification_name" name="classification_name" type="text" required value="<%= locals.classification_name %>" pattern="^[A-Za-z]+$"><br>
    <input type="submit" id="add-classification-button" value="Add Classification">
</form>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>
