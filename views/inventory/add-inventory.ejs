<!-- Content Heading EJS -->
<% if (title) { %>
    <h1><%= title %></h1>   
    <% } else {
      res.redirect('/')
    } %>
<%- messages() %>    
<form id="addInventoryForm" action="/inv/add-inventory" method="post">
    <label for="classification_id">Classification</label><br>
    <select name="classification_id" id="classification_id"> 
        <%- classification_names %>
    </select><br>
    <label for="inv_make">Make</label><br>
    <input required placeholder="Min of 3 characters" type="text" id="inv_make" name="inv_make" value="<%= locals.inv_make %>" pattern="^[A-Za-z ]{3,}$"><br>

    <label for="inv_model">Model</label><br>
    <input required placeholder="Min of 3 characters" type="text" id="inv_model" name="inv_model" value="<%= locals.inv_model %>" pattern="^[A-Za-z ]{3,}$"><br>

    <label for="inv_description">Description</label><br>
    <textarea id="inv_description" name="inv_description"><%- locals.inv_description %></textarea><br>

    <label for="inv_image">Image Path</label><br>
    <input required type="text" id="inv_image" name="inv_image" 
    <% if (locals.inv_image) { %>
      value="<%- locals.inv_image %>"
    <% } else {%>
      value="/images/vehicles/no-image.png"
    <% } %>
    ><br>

    <label for="inv_thumbnail">Thumbnail Path</label><br>
    <input required type="text" id="inv_thumbnail" name="inv_thumbnail" 
    <% if (locals.inv_thumbnail) { %>
      value="<%- locals.inv_thumbnail %>"
    <% } else {%>
      value="/images/vehicles/no-image-tn.png"
    <% } %>
    ><br>

    <label for="inv_price">Price</label><br>
    <input required placeholder="decimal or integers" type="number" id="inv_price" name="inv_price" value="<%= locals.inv_price %>" pattern="^\d+(?:\.\d{2})?$"><br>

    <label for="inv_year">Year</label><br>
    <input required placeholder="4-digit year" type="number" id="inv_year" name="inv_year"  value="<%= locals.inv_year %>" pattern="\b\d{4}\b"><br>

    <label for="inv_miles">Miles</label><br>
    <input required placeholder="Digits only" type="number" id="inv_miles" name="inv_miles" value="<%= locals.inv_miles %>" pattern="^\d+$"><br>

    <label for="inv_color">Color</label><br>
    <input required type="text" id="inv_color" name="inv_color" value="<%= locals.inv_color %>" pattern="^[A-Za-z]+$"><br>

    <input type="submit" name="submit" id="add-inventory-button" value="Add Inventory"><br>
</form>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>